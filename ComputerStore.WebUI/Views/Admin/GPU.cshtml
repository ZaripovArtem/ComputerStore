@model IEnumerable<ComputerStore.Domain.Entities.GPU>
@{
    ViewBag.Title = "GPU";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список видеокарт</h3>
        <div class="panel-footer">
            @Html.ActionLink("Добавить товар", "CreateGPU", null,
                new { @class = "btn btn-secondary" })
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Название</th>
                <th class="text-right">Цена</th>
                <th class="text-center">Действия</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.Id</td>
                    <td>@Html.ActionLink(item.Name, "EditGPU", new { item.Id })</td>
                    <td class="text-right">@item.Price.ToString("# ₽")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("DeleteGPU", "Admin"))
                        {
                            @Html.Hidden("Id", item.Id)
                            <input type="submit"
                                   class="btn btn-secondary"
                                   value="Удалить" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<style>
    .panel-footer {
        margin-left: 82%;
        margin-bottom: 10px;
    }
</style>