@model ComputerStore.Domain.Entities.FAN

@{
    ViewBag.Title = "Админ панель: редактирование товара";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
   

    @using (Html.BeginForm("EditFAN", "Admin",
        FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="main">
            <div class="helper">
                <div class="panel-heading">
                    <h3>Редактирование куллера @Model.Name</h3>
                </div>
                <div class="panel-body">
                    @Html.HiddenFor(m => m.Id)
                    @foreach (var property in ViewData.ModelMetadata.Properties)
                    {
                        switch (property.PropertyName)
                        {
                            case "Id":
                            case "ImageData":
                            case "ImageMimeType":
                                // Ничего не делать
                                break;
                            default:
                                <div class="form-group">
                                    <label>@(property.DisplayName ?? property.PropertyName)</label>
                                    @if (property.PropertyName == "Description")
                                    {
                                        @Html.TextArea(property.PropertyName, null,
                                            new { @class = "form-control", rows = 5 })
                                    }
                                    else
                                    {
                                        @Html.TextBox(property.PropertyName, null,
                                            new { @class = "form-control" })
                                    }
                                    @Html.ValidationMessage(property.PropertyName)
                                </div>
                                break;
                        }
                    }
                    <div class="form-group">
                        <div style="position:relative;">
                            <input type="file" name="Image">
                        </div>
                        @if (Model.ImageData == null)
                        {
                            <div class="form-control-static">Нет картинки</div>
                        }
                        else
                        {
                            <div class="photo">
                                <img class="img-thumbnail" width="150" height="150"
                                     src="@Url.Action("GetImage", "FAN",
                                    new { Model.Id })" />
                            </div>
                        }

                    </div>
                </div>
                <div class="panel-footer">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    @Html.ActionLink("Отменить изменения", "FAN", null, new
                    {
                        @class = "btn btn-default"
                    })
                </div>
            </div>
        </div>
    }
</div>

<style>
    .form-group{
        width: 400px;
        padding-left: 10px;
        padding-top: 5px;
        
    }
    .button-pic{
        color: black;
        padding-left: 2px;
    }
    .button-pic:focus{
        border-bottom: 1px black solid;
    }
    .photo {
        position: absolute;
        
    }
    .photo h2 {
        left: 0;
        position: absolute;
        top: 105px;
        width: 100%;
        left: 5px;
    }
    .photo h2 span{
        background: #222;
        border-radius: 2px;
        color: #fff;
        font: 21px arial;
        line-height: 29px;
        padding: 3px 5px;
    }
    .panel-footer {
        margin-top: 155px;
        margin-left: 10px;
    }
    .main {
        width: 100%;
        height: 100%;


    }
    .helper {
        -webkit-box-shadow: 0px 5px 26px 1px rgba(34, 60, 80, 0.29);
        -moz-box-shadow: 0px 5px 26px 1px rgba(34, 60, 80, 0.29);
        box-shadow: 0px 5px 26px 1px rgba(34, 60, 80, 0.29);
        position: absolute;
        left: 30%;
        top: 10%;
        border-radius: 12px;
        height: 990px;
        width: 1100px;
        padding-top: 50px;
        padding-left: 250px;
    }
</style>