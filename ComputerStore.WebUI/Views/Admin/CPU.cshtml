@model IEnumerable<ComputerStore.Domain.Entities.CPU>
    @{
        ViewBag.Title = "CPU";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <br />
    <div class="panel-footer">
        @Html.ActionLink("Добавить товар", "Create", null,
            new { @class = "btn btn-secondary" })
    </div>
    <br />

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Список процессоров</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-right">ID</th>
                    <th>Название</th>
                    <th class="text-right">Цена</th>
                    <th class="text-center">Действия</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-right">@item.CPUId</td>
                        <td>@Html.ActionLink(item.Name, "EditCPU", new { item.CPUId })</td>
                        <td class="text-right">@item.Price.ToString("# ₽")</td>
                        <td class="text-center">
                            @using (Html.BeginForm("DeleteProduct", "Admin"))
                            {
                                @Html.Hidden("CPUId", item.CPUId)
                                <input type="submit"
                                       class="btn btn-secondary"
                                       value="Удалить" />
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
